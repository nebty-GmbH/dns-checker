# Production Environment Variables for Dokku Deployment
# Set these using: dokku config:set dns-checker VARIABLE=value

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
DOKKU_DOMAIN=your-domain.com

# Database (Dokku will set this automatically if you add a postgres plugin)
# DATABASE_URL=postgres://user:pass@host:port/dbname

# Redis (Dokku will set this automatically if you add a redis plugin)
# REDIS_URL=redis://host:port/db

# Security Settings (optional, defaults provided)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
